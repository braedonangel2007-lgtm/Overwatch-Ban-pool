    <div class="team-box">
        <h3>Team 1 Bans</h3>
        <div id="team1Bans">None</div>
    </div>

    <div class="team-box">
        <h3>Team 2 Bans</h3>
        <div id="team2Bans">None</div>
    </div>
</div>

<div class="section">
    <h2>ðŸ›¡ Tank</h2>
    <div class="heroes" id="tankList"></div>
</div>

<div class="section">
    <h2>âš” DPS</h2>
    <div class="heroes" id="dpsList"></div>
</div>

