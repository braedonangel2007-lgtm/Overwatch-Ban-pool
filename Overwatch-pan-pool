    <h2>ðŸ’‰ Support</h2>
    <div class="heroes" id="supportList"></div>
</div>

<center>
<button onclick="resetDraft()">Reset Draft</button>
</center>

<script>
const tanks = ["D.Va","Doomfist","Junker Queen","Orisa","Ramattra","Reinhardt","Roadhog","Sigma","Winston","Wrecking Ball","Zarya"];
const dps = ["Ashe","Bastion","Cassidy","Echo","Genji","Hanzo","Junkrat","Mei","Pharah","Reaper","Sojourn","Soldier: 76","Sombra","Symmetra","TorbjÃ¶rn","Tracer","Widowmaker"];
const supports = ["Ana","Baptiste","Brigitte","Illari","Kiriko","Lifeweaver","LÃºcio","Mercy","Moira","Zenyatta"];

let round = 1;
const maxRounds = 5;
let currentTeam = 1;

let team1Bans = [];
let team2Bans = [];

function renderSection(list, elementId) {
    const container = document.getElementById(elementId);
    container.innerHTML = "";

    list.forEach(hero => {
        const div = document.createElement("div");
        div.className = "hero";
        div.textContent = hero;

        if (team1Bans.includes(hero) || team2Bans.includes(hero)) {
            div.classList.add("banned");
        }

        div.onclick = () => attemptBan(hero);
        container.appendChild(div);
    });
}

function attemptBan(hero) {
    if (round > maxRounds) return;
    if (team1Bans.includes(hero) || team2Bans.includes(hero)) return;

    if (currentTeam === 1) {
        team1Bans.push(hero);
        currentTeam = 2;
    } else {
        team2Bans.push(hero);
        currentTeam = 1;
        round++;
    }

    updateDisplay();
}

function updateDisplay() {
    document.getElementById("team1Bans").innerHTML =
        team1Bans.length ? team1Bans.join("<br>") : "None";

    document.getElementById("team2Bans").innerHTML =
        team2Bans.length ? team2Bans.join("<br>") : "None";

    if (round > maxRounds) {
        document.getElementById("turnDisplay").innerText = "Draft Complete!";
    } else {
        document.getElementById("turnDisplay").innerText =
            `Round ${round} - Team ${currentTeam} Ban`;
    }

    renderAll();
}

function renderAll() {
    renderSection(tanks, "tankList");
    renderSection(dps, "dpsList");
    renderSection(supports, "supportList");
}

function resetDraft() {
    round = 1;
    currentTeam = 1;
    team1Bans = [];
    team2Bans = [];
    updateDisplay();
}

updateDisplay();
</script>

